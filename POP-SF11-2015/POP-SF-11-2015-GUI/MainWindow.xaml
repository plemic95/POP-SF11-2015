                <ImageBrush ImageSource="Images/btnNamestaj.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnKorisnici" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="250" Margin="700,200,0,0" Click="btnKorisnici_Click" FontSize="36">
            <Button.Background>
                <ImageBrush ImageSource="Images/btnUsers.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnAkcije" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="250" Margin="1300,200,0,0" Click="btnAkcije_Click" FontSize="36">
            <Button.Background>
                <ImageBrush ImageSource="Images/btnAkcija.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnDodatneUsluge" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="250" Margin="100,550,0,0" Click="btnDodatneUsluge_Click" FontSize="28">
            <Button.Background>
                <ImageBrush ImageSource="Images/btnDodatneUsluge.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnProdaja" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="250" Margin="700,550,0,0" Click="btnProdaja_Click" FontSize="36">
            <Button.Background>
                <ImageBrush ImageSource="Images/btnProdaja.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnSalon" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="250" Margin="1300,550,0,0" Click="btnSalon_Click" FontSize="36" Grid.RowSpan="2">
            <Button.Background>
                <ImageBrush ImageSource="Images/btnSalon.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnLogout" Content="" HorizontalAlignment="Left" Margin="1500,850,0,0" Width="300" Height="200" BorderThickness="1" Click="btnLogout_Click">
            <Button.Background>
                <ImageBrush ImageSource="Images/btnLogout.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
