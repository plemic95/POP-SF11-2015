<Window x:Class="POP_SF_11_2015_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_11_2015_GUI"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized"
        WindowStyle="None" Height="1712.846" Width="2409.288">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/mainSalon.png"/>
        </Grid.Background>
        <Button x:Name="btnNamestaj" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="250" Margin="100,200,0,0" Click="btnNamestaj_Click" FontSize="36">
